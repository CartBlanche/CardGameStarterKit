<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardGame.Views.MainPage">
	<Grid>
		<Image Source="splashpage.jpg"
                SemanticProperties.Description=""
                Aspect="AspectFit"
                HorizontalOptions="Center"
			    VerticalOptions="Center"/>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="btnNewGame"
                Text="New Game"
                SemanticProperties.Hint="Starts a new game when clicked."
                Clicked="OnNewGameClicked"
                HorizontalOptions="End"
				VerticalOptions="Center"
				WidthRequest="120"/>

			<Button
                x:Name="btnSettings"
                Text="Settings"
                SemanticProperties.Hint="Displays the settings page."
                Clicked="OnSettingsClicked"
                HorizontalOptions="End"
				VerticalOptions="Center"
				WidthRequest="120"/>

		</VerticalStackLayout>
    </Grid>

</ContentPage>
